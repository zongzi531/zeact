{
  "extends": "tslint:recommended",
  "rulesDirectory": [
    "packages/"
  ],
  "rules": {
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "semicolon": [
      true,
      "never"
    ],
    "no-conditional-assignment": false,
    "arrow-parens": false
  }
}
